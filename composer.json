{
  "name": "paksuco/categories",
  "description": "WIP - A category and search criteria management solution",
  "keywords": ["laravel", "category", "search", "criteria", "management"],
  "license": "MIT",
  "authors": [
    {
      "name": "Taha PAKSU",
      "email": "tpaksu@gmail.com",
      "homepage": "https://rettica.com"
    }
  ],
  "require": {
    "php": ">=7.0.0",
    "illuminate/support": "^7.0",
    "illuminate/config": "^7.0",
    "illuminate/routing": "^7.0",
        "spatie/laravel-permission": "^3.13",
        "livewire/livewire": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3"
  },
  "autoload": {
    "psr-4": {
      "Paksuco\\Categories\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Paksuco\\Categories\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
        "providers": [
            "Paksuco\\Categories\\CategoryServiceProvider"
        ],
        "aliases": {
            "Package": "Paksuco\\Categories\\Facade"
        }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
